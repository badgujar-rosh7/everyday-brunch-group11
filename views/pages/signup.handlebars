
  <div class="container">
   <h1>Signup</h1>

  <form method="POST" action="/signup" id="signup-form">
   <div class="form-group">
     <label for="firstname">
      First Name
      <input id="firstname" type="text" name="firstname" class="form-control" placeholder="First Name" required>
    </label>
    </div>
    <div class="form-group">
    <label for="lastname">
      Last Name
      <input id="lastname" type="text" name="lastname" class="form-control" placeholder="Last Name" required>
    </label>
    </div>
    <div class="form-group">
    <label for="email">
      Email
      <input id="email" type="email" name="email" class="form-control" placeholder="Email" required>
    </label>
    </div>
    <div class="form-group">
    <label for="dateOfBirth">
      Date of Birth
      <input id="dateOfBirth" type="date" name="dateOfBirth" class="form-control" placeholder="Date of Birth" required>
    </label>
    </div>
    <div class="form-group">
    <label for="city">
      City
      <input id="city" type="text" name="city" class="form-control" placeholder="City" required>
    </label>
    </div>
    <div class="form-group">
    <label for="state">
      State
      <input id="state" type="text" name="state" class="form-control" placeholder="state" required>
    </label>
    </div>
    <div class="form-group">
    <label for="username">
      Username
      <input id="username" type="text" name="username" class="form-control" placeholder="username" required>
    </label>
     </div>
 <div class="form-group">
    <label for="password">
      Password  <input id="password" type="password" name="password" class="form-control" placeholder="password" required>
    </label>
  </div>
    <button type="submit" class="btn">Sign Up</button>
  </form>
  <br>
  {{#if hasErrors}}
    <p class="error">{{error}}</p>
  {{/if}}
  <br>
  <a href="/login">Already have an account? Click here to log-in</a>
  </div>
