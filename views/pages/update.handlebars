

<section class="section admin-section">
    <div class="container">
        <div class="row">
            <h1 class="main-heading text-center mt-5 mb-5">Admin</h1>
        </div>
        <div class="accordion-item mb-5">
            <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="true" aria-controls="panelsStayOpen-collapseTwo">
                Edit Item
            </button>
            </h2>
            <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingTwo">
                <div class="accordion-body">
                    
                    <form class="row g-0" ref='MenuUpdateForm' id='MenuUpdateForm' method="post" action="./updateMenu" encType="multipart/form-data">
                        <div class="col-sm-6">  
            <div class="form-floating mb-5">
              <select class="form-select" id="itemCategory" name="itemCategory" placeholder="Category" required>
                    <option selected>{{category}}</option>
                    {{#each data}}
                <option value="{{category}}">{{category}}</option>
                    {{/each}}
              </select>
              <label for="itemCategory">Category</label>
            </div>
          </div> 
          
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" placeholder="Type Food Title" id="itemTitle" name="itemTitle" value="{{title}}">
                            <label for="floatingPassword">Food Title</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" placeholder="Type Food Description" id="itemDescription" name="itemDescription" value="{{description}}">
                            <label for="floatingPassword">Food Description</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" placeholder="Type Food Price" id="itemPrice" name="itemPrice" value="{{price}}">
                            <label for="floatingPassword">Food Price</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" placeholder="Type Food Calories" id="itemCalories" name="itemCalories" value="{{calories}}">
                            <label for="floatingPassword">Food Calories</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" placeholder="Type Food Keyword" id="itemKeywords" name="itemKeywords" value="{{keywords}}">
                            <label for="floatingPassword">Food Keyword</label>
                        </div>
                                                <div class="form-floating mb-3"hidden>
                            <input type="text" class="form-control" placeholder="Type Food Keyword" id="itemId" name="itemId" value="{{id}}" hidden>
                          
                        </div>
                        <div class="mb-3">
                            <label for="formFile" class="form-label">Default file input example</label>
                            <input class="form-control" type="file" name="menuFile" id="formFile">
                        </div>

                                <input type="text" id="itemCategoryold" name="itemCategoryold" value="{{category}}" hidden>
        <input type="text" id="itemTitleold" name="itemTitleold" value="{{title}}" hidden>
        <input type="text" id="itemDescriptionold" name="itemDescriptionold" value="{{description}}" hidden>
        <input type="text" id="itemPriceold" name="itemPriceold" value="{{price}}" hidden>
        <input type="text" id="itemCaloriesold" name="itemCaloriesold" value="{{calories}}" hidden>
        <input type="text" id="itemKeywordsold" name="itemKeywordsold" value="{{keywords}}" hidden>

                        <div class="mb-3">
                            <img src="../../public/images/Menu/{{image}}">
                        </div>
                        
                             <div class="col-12" id="errordiv" >
                        
                        </div>
                        <div class="col-12">
                            <button type="button" onclick="UpdateMenu()" class="btn btn-primary">Publish</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function UpdateMenu(){
     let category=$('#itemCategory').val();
let title=$('#itemTitle').val();
let description=$('#itemDescription').val();
let price=$('#itemPrice').val();
let Calories=$('#itemCalories').val();
let Keyword=$('#itemKeywords').val();
let image=$('#formFile').val();
alert(image)


if(!category || !category.trim()){
    $('#errordiv').empty();
    $('#errordiv').append('<p>Select a Valid Category<p>');
        $('#errordiv').show();
        return;
}
if(!title || !title.trim()){
 $('#errordiv').empty();
